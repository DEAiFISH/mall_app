/* pages/user-info/user-info.wxss */

.user-info-form {
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.form-item text {
  width: 150rpx;
  font-size: 30rpx;
  color: #333;
}

.form-item input {
  flex: 1;
  padding: 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  font-size: 28rpx;
  color: #666;
}

.form-item picker {
  flex: 1;
  padding: 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  font-size: 28rpx;
  color: #666;
}

button {
  width: 80%;
  padding: 10rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 5rpx;
  margin-top: 20rpx;
  margin-left: auto;
  margin-right: auto;
}