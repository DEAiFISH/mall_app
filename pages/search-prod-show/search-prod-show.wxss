/* pages/search-prod-show/search-prod-show.wxss */

page {
  background: #f4f4f4;
}

/* 搜索栏 */

.fixed-box {
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 999;
  background: #fff;
}

.search-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  color: #777;
  padding: 10rpx 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.search-box {
  position: relative;
  height: 60rpx;
  background: #f7f7f7;
  border-radius: 30rpx;
  flex: 1;
  margin-right: 10rpx;
}

.sear-input {
  height: 60rpx;
  border: none;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.search-img {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 20rpx;
  top: 14rpx;
}

.search-bar .search-hint {
  font-size: 28rpx;
  position: absolute;
  right: 30rpx;
  top: 31rpx;
  color: #eb2444;
}

.search-bar .search-list-img {
  width: 40rpx;
  height: 40rpx;
  font-size: 0;
}

.search-bar .search-list-img image {
  width: 100%;
  height: 100%;
}

.tabs {
  display: flex;
  justify-content: space-around;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  padding: 10rpx 0;
}

.tab-item.on {
  color: #eb2444;
}

/* 商品列表 */
.prod-list {
  margin-top: 100rpx;
}

.show-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #e1e1e1;
}

.more-prod-pic {
  width: 100px;
  height: 100px;
}

.more-pic {
  max-width: 100%;
  max-height: 100%;
  border-radius: 8rpx;
}

.prod-text-right {
  margin-left: 10rpx;
  flex: 1;
}

.prod-text {
  font-size: 24rpx;
  color: #333;
}

.cate-prod-info {
  font-size: 20rpx;
  color: #999;
}

.prod-price {
  font-size: 22rpx;
  color: #eb2444;
}